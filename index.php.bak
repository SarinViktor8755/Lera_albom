        function createParticles() {
            const container = document.getElementById('particlesContainer');
            const particleCount = 150; // –ö–æ–ª–∏—á–µ—Å—Ç–≤–æ —á–∞—Å—Ç–∏—Ü
            
            for (let i = 0; i < particleCount; i++) {
                const particle = document.createElement('div');
                particle.classList.add('particle');
                
                // –ù–∞—á–∞–ª—å–Ω–∞—è –ø–æ–∑–∏—Ü–∏—è
                const startX = Math.random() * window.innerWidth;
                const startY = Math.random() * window.innerHeight;
                
                // –ö–æ–Ω–µ—á–Ω–∞—è –ø–æ–∑–∏—Ü–∏—è (—Å–ª—É—á–∞–π–Ω–æ–µ –Ω–∞–ø—Ä–∞–≤–ª–µ–Ω–∏–µ)
                const angle = Math.random() * Math.PI * 2;
                const distance = 100 + Math.random() * 300;
                const tx = Math.cos(angle) * distance;
                const ty = Math.sin(angle) * distance;
                
                // –°–ª—É—á–∞–π–Ω—ã–π —Ä–∞–∑–º–µ—Ä –∏ –∑–∞–¥–µ—Ä–∂–∫–∞ –∞–Ω–∏–º–∞—Ü–∏–∏
                const size = 1 + Math.random() * 3;
                const delay = Math.random() * 5;
                const duration = 2 + Math.random() * 3; // –ë—ã—Å—Ç—Ä–∞—è –∞–Ω–∏–º–∞—Ü–∏—è –∫–∞–∫ –≤ DOOM
                
                // –ü—Ä–∏–º–µ–Ω—è–µ–º —Å—Ç–∏–ª–∏
                particle.style.left = `${startX}px`;
                particle.style.top = `${startY}px`;
                particle.style.width = `${size}px`;
                particle.style.height = `${size}px`;
                particle.style.setProperty('--tx', `${tx}px`);
                particle.style.setProperty('--ty', `${ty}px`);
                particle.style.animationDuration = `${duration}s`;
                particle.style.animationDelay = `${delay}s`;
                
                // –¶–≤–µ—Ç —á–∞—Å—Ç–∏—Ü—ã (–º–æ–∂–Ω–æ —Å–¥–µ–ª–∞—Ç—å –æ—Ä–∞–Ω–∂–µ–≤—ã–µ –∫–∞–∫ –≤ DOOM)
                const isOrange = Math.random() > 0.7;
                if (isOrange) {
                    particle.style.background = 'rgba(255, 100, 0, 0.8)';
                    particle.style.boxShadow = '0 0 10px 2px rgba(255, 100, 0, 0.5)';
                } else {
                    const brightness = 150 + Math.random() * 105;
                    particle.style.background = `rgba(${brightness}, ${brightness}, ${brightness}, 0.7)`;
                }
                
                container.appendChild(particle);
            }
        }
        
